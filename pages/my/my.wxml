<view class="container my-container">
  <view class="my-header">
    <image src="{{userInfo.avatarUrl}}"></image>
    <text class="name">{{userInfo.nickName}}</text>
    <!-- <open-data type="userNickName"></open-data> -->
    <button wx:if="{{canIUse}}" class='btn_sq' open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" hidden='{{showbtn}}'>微信授权</button>
  </view>
  <!--地址管理-->
  <view class="my-address">
    <block wx:if="{{addressInfo}}">
      <view class="item-title" bindtap="editAddress">
        地址管理
        <image src="../../imgs/icon/arrow@right.png"></image>
      </view>
      <view  class="item-main">
          <view class="section">
            <input disabled name="name" placeholder="姓名" value="{{addressInfo.name}}" />
          </view>
          <view class="section">
            <input disabled type="number" name="mobile" placeholder="手机号码" value="{{addressInfo.mobile}}"/>
          </view>
          <view class="section">
            <input disabled name="detail" placeholder="收货地址" value="{{addressInfo.totalDetail}}"/>
          </view>
      </view>
    </block>
    <block wx:else>
      <view class="add-new-address" bindtap="editAddress"><text class="icon">+</text><text>添加地址</text></view>
    </block>
  </view>
  <!--订单管理-->
  <view class="my-order">
    <view class="item-title" bindtap='toMyorder'>
    我的订单<image src="../../imgs/icon/arrow@right.png"></image>
    </view>
    <view class="item-title" bindtap='toMymessage'>
    我的消息
    <block wx:if='{{messageCount > 0}}'>
      <view class='redpoint'>{{messageCount}}</view>
    </block>
    <image src="../../imgs/icon/arrow@right.png"></image>
    </view>
    <view class='item-title' bindtap='tofeedback'>
    意见反馈<image src="../../imgs/icon/arrow@right.png"></image>
    </view>
    <view class='item-title' bindtap='toauth'>
    <!-- <button open-type='openSetting'>权限管理</button> -->
