/* pages/index/index.wxss */
@import "../tpls/base.wxss";
@import "../tpls/products/products-tpl.wxss";
.search-view{
  width: 100%;
  height: 60rpx;
}
.search-main{
  display: flex;
  flex-wrap:wrap;
  align-content: space-between;
  margin-left: 30%; 
}
.search_input{
  border-bottom: 1px solid gray;
}
.search-main input{
  width: 250rpx;
}
.search-img{
  width: 40rpx;
  height: 50rpx;
  /* float: left; */
   display: block; 
  /* margin-left: 50rpx; */
}

.swiper{
  width: 100%;
  height: 400rpx;
}
.banner-item{
  height: 100%;
  width: 100%;
}
.banner-item image{
  height: 100%;
  width: 100%;
}
.home-main-header{
  display: flex;
  height: 60rpx;
  color: #8A8A8A;
  background-color: #fff;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.home-main-theme{
  /*margin: 20rpx 0;*/
}
.theme-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.theme-item{
  display: flex;
  height:375rpx;
  width: 50%;
  border-bottom: 4rpx solid #fff;
  position: relative;
  box-sizing: border-box;
}
.theme-item:first-child{
  border-right:4rpx solid #fff;
}
.theme-item.big{
  width: 100%;
}
.theme-item.big .theme-icon view{
  margin: 0 auto;
  width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  border:1rpx solid #fff;
  text-align: center;
  font-size: 24rpx;
}
.theme-item image{
  height: 100%;
  width: 100%;
}
.theme-icon{
  margin-top:10rpx;
  height: 48rpx;
}
.theme-icon image{
  height: 48rpx;
  width: 48rpx;
}

.look_more{
  font-size: 24rpx;
  margin-left: auto;
}